<view class="container record-list">
    <block wx:for="{{record}}" wx:key="time">
        <view class="flex">
        <view class="image-section1">
            <image style="width:80px; height:80px; background-color:#eeeeee;"
             src="{{item.img}}" mode="aspectFit" />
        </view>
        <view class="item-right">
           <view> <text class="record-item1">{{item.time}}</text></view> 
           <view><text class="record-item2">{{item.great}}</text></view>
        </view>
        </view>

    </block>
</view>